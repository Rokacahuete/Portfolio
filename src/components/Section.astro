---
const { title, style, class: classlist } = Astro.props;
---

<div class=`section glass centered ${classlist ?? ""}` style={style ?? ""}>
	{ title ? <h1>{title}</h1> : "" }
	<slot />
</div>

<style>
    .section {
		padding-top: 20px;
        flex: 1 1 300px;
		height: 100%;
		text-align: center;
        background: linear-gradient(350deg, var(--section-color-1), var(--section-color-2), var(--section-color-1));
    	border: 2px solid var(--border-color);
  		box-sizing: border-box;
    	border-radius: 30px;
    }

	h1 {
		background-color: var(--title-color);
		border: 2px solid var(--border-color);
		border-radius: 2px;
		padding: 5px 0px;
		margin-top: 0;
		width: 90%;
	}

	.section>* {
		max-width: 90%;
	}

	.section .text {
		box-sizing: border-box;
		margin-top: auto;
	}
	
	.section img {
		max-height: 300px;
		border: 4px solid var(--border-color);
		border-radius: 2px;
		margin-bottom: 20px;
	}
</style>