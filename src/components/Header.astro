---
import Title from "./Title.astro";
import Button from "./Button.astro";
---

<div class="header glass centered" id="header">
    <Title>Portfolio - Brian</Title>
    <div class="buttons-container" id="buttons-container">
        <Button redirect="/Portfolio/">Acceuil</Button>
        <Button redirect="https://docs.google.com/document/d/1ObSIAbArOBxSG8I4APFQeS4ebMRGy4zfYXF6-B-Tblo/edit?usp=sharing" target>NDS</Button>
    </div>
    <button class="switch" id="switch-button" type="button">
        <div id="switch-button-text">V</div>
    </button>
</div>

<style>
    .header {
        position: fixed;
        z-index: 1;
        background-color: var(--main-color);
        width: calc(100% - 31px);

        font-family: 'copyduck', sans-serif;
        font-size: 20px;

        border: 2px solid var(--border-color);
        border-radius: 10px;
        padding: 5px;
    }

    :global(.header .title) {
        width: 100%;
        padding-block: 20px;
        margin-bottom: 5px;
    }

    @media (min-width: 625px) {
        .buttons-container {
            display: flex;
            align-items: center;
            gap: 7px;
        }

        .switch {
            display: none;
        }
    }

    @media (max-width: 624px) {
        :global(.buttons-container>.button) {
            width: 100%;
            height: 30px;
            margin: 2px;
        }

        .buttons-container {
            pointer-events: none;
            max-height: 0;
            opacity: 0;
            width: 95%;

            transition: max-height .3s, opacity .3s;
        }
        .buttons-container.open {
            pointer-events: auto;
            max-height: 200px;
            opacity: 1;
        }

        .switch {
            background-color: var(--title-color);
            border: 2px solid var(--border-color);
            border-radius: 10px;
            width: 100%;
            height: 40px;

            transition: background-color .3s, transform .3s;
        }
        .switch:hover {
            background-color: rgba(255, 0, 0, 0.55);
            transform: scale(1.02);
        }

        .switch>div {
            transition: transform .3s;
        }
        .switch>div.open {
            transform: scaleY(-1);
        }
    }
</style>

<script>
    function offsetHeader() {
        const header = document.getElementById("header");
        const content = document.querySelector("main");
        if (!header || !content) return;

        const height = header.offsetHeight;
        content.style.paddingTop = `calc(${height}px + 10px)`;
    }

    window.addEventListener("load", offsetHeader);
    window.addEventListener("resize", offsetHeader);
    document.getElementById("buttons-container")?.addEventListener("transitionend", offsetHeader);
</script>

<script>
    const switchButton = document.getElementById("switch-button");
    switchButton?.addEventListener("click", () => SwitchMenu());

    function SwitchMenu() {
        const buttonsContainer = document.getElementById("buttons-container");
        const switchButtonText = document.getElementById("switch-button-text");
        
        buttonsContainer?.classList.toggle("open");
        switchButtonText?.classList.toggle("open");
    }
</script>