---
import Image from '../assets/Background.jpg';
---

<div id="container">
	<img id="background" src={Image.src} alt="" fetchpriority="high" />
</div>

<style>
	#background {
		opacity: .8;
        width: 100%;
        height: 100%;
		object-fit: cover;
	}

	#container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}
</style>